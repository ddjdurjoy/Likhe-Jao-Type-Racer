{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      // Send all non-asset routes to the server (SPA), but let static assets resolve normally
      "source": "/((?!assets|favicon\\.png|robots\\.txt|manifest\\.json|.*\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico)).*)",
      "destination": "/api"
    }
  ]
}
